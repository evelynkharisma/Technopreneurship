<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.techno.technopreneurship.FamilyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <!--android:background="@color/background"-->

        <TextView
            android:id="@+id/add_diabetes_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Diabetes"
            android:textColor="@color/login_red"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/add_diabetes"
            android:layout_below="@id/add_diabetes_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diabetes"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp" />

        <EditText
            android:id="@+id/add_diabetes_fill"
            android:inputType="numberDecimal"
            android:layout_below="@id/add_diabetes_tittle"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/edittextstyle"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:layout_alignParentRight="true" />

        <Button
            android:id="@+id/add_diabetes_btn"
            android:layout_below="@+id/add_diabetes_fill"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Confirm"
            android:textSize="15dp"
            android:background="@color/sign_in"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp" />

        <Space
            android:layout_below="@id/add_diabetes_btn"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </RelativeLayout>

</LinearLayout>
