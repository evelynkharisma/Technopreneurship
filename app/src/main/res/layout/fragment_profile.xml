<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
                android:background="@color/background">

    <TextView
        android:id="@+id/profile_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/login_red"
        android:textSize="14dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/profile_desc"
        android:layout_below="@+id/profile_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We need your basic medical information,"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/profile_desc2"
        android:layout_below="@+id/profile_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="this information will be kept confidential"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:gravity="center_horizontal" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_below="@id/profile_desc2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_username_fill"
                android:inputType="text"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true"
                android:imeOptions="actionNext"/>

            <TextView
                android:id="@+id/profile_pass"
                android:layout_below="@id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_pass_fill"
                android:inputType="textPassword"
                android:layout_below="@id/profile_username_fill"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/profile_cPass"
                android:layout_below="@id/profile_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Pass"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_cPass_fill"
                android:inputType="textPassword"
                android:layout_below="@id/profile_pass_fill"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_below="@id/profile_cPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name in KTP"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_name_fill"
                android:inputType="text"
                android:layout_below="@id/profile_cPass_fill"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/profile_gender"
                android:layout_below="@id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp"/>

            <EditText xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/profile_gender_fill"
                android:editable="false"
                android:layout_below="@id/profile_name_fill"
                  android:layout_width="200dp"
                  android:layout_height="30dp"
                  android:layout_marginTop="15dp"
                  android:layout_marginRight="12dp"
                  android:background="@drawable/edittextstyle"
                  android:paddingStart="20dp"
                  android:paddingEnd="10dp"
                  android:textColor="@color/gray"
                  android:textColorHint="@color/gray"
                android:layout_alignStart="@+id/profile_name_fill">
            </EditText>

            <TextView
                android:id="@+id/profile_add"
                android:layout_below="@id/profile_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_add_fill"
                android:inputType="text"
                android:layout_below="@id/profile_gender_fill"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_below="@id/profile_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_email_fill"
                android:inputType="textEmailAddress"
                android:layout_below="@id/profile_add_fill"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/profile_phone"
                android:layout_below="@id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_phone_fill"
                android:inputType="phone"
                android:layout_below="@id/profile_email_fill"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/profile_bday"
                android:layout_below="@id/profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="12dp"
                android:layout_alignEnd="@+id/profile_add" />

            <EditText
                android:id="@+id/profile_bday_day_fill"
                android:inputType="number"
                android:layout_below="@id/profile_phone_fill"
                android:layout_toLeftOf="@+id/profile_bday_month_fill"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:hint="DD"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />

            <TextView
                android:layout_below="@id/profile_phone_fill"
                android:layout_toLeftOf="@+id/profile_bday_month_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="30dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="4dp"/>

            <EditText
                android:id="@+id/profile_bday_month_fill"
                android:inputType="number"
                android:layout_below="@id/profile_phone_fill"
                android:layout_toLeftOf="@+id/profile_bday_year_fill"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:hint="MM"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />

            <TextView
                android:layout_below="@id/profile_phone_fill"
                android:layout_toLeftOf="@+id/profile_bday_year_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="30dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="4dp"/>

            <EditText
                android:id="@+id/profile_bday_year_fill"
                android:inputType="number"
                android:layout_below="@id/profile_phone_fill"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:hint="YYYY"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/profile_ID"
                android:layout_below="@id/profile_bday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KTP"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_ID_fill"
                android:inputType="number"
                android:layout_below="@id/profile_bday_year_fill"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/profile_Emergency_Contact"
                android:layout_below="@id/profile_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Contact"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:id="@+id/profile_EName"
                android:layout_below="@id/profile_Emergency_Contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - Name"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_EName_fill"
                android:inputType="text"
                android:layout_below="@id/profile_Emergency_Contact"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true" />


            <TextView
                android:id="@+id/profile_EPhone"
                android:layout_below="@id/profile_EName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Phone"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_EPhone_fill"
                android:inputType="phone"
                android:layout_below="@id/profile_EName_fill"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/profile_blood"
                android:layout_below="@id/profile_EPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Type"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_blood_fill"
                android:inputType="text"
                android:layout_below="@id/profile_EPhone_fill"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/profile_height"
                android:layout_below="@id/profile_blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_height_fill"
                android:inputType="numberDecimal"
                android:layout_below="@id/profile_blood_fill"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:hint="cm"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/profile_weight"
                android:layout_below="@id/profile_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="12dp"/>

            <EditText
                android:id="@+id/profile_weight_fill"
                android:inputType="numberDecimal"
                android:layout_below="@id/profile_height_fill"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edittextstyle"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:hint="kg"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/profile_btn"
                android:layout_below="@+id/profile_weight"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Edit"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>